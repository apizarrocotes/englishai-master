# Server IP Configuration
IP_ADDRESS="localhost"

# Development Settings
SKIP_AUTH="true"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/englishai_master?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORGANIZATION="your-openai-org-id"

# OpenAI Models Configuration
OPENAI_CHAT_MODEL="gpt-4.1-2025-04-14"     # Main AI teacher model (complex conversations)
OPENAI_SIMPLE_MODEL="gpt-4.1-mini-2025-04-14" # Simple tasks (corrections, evaluations)  
OPENAI_WHISPER_MODEL="whisper-1"            # Speech-to-text transcription
OPENAI_TTS_MODEL="tts-1-hd"                 # Text-to-speech synthesis
OPENAI_TTS_VOICE="nova"                     # TTS voice (alloy, echo, fable, onyx, nova, shimmer)

# JWT
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRES_IN="30d"

# API Configuration (will use IP_ADDRESS variable)
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="englishai-audio-files"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="info"
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX="100"  # requests per window